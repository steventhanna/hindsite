<% include components/depend %>

<% include components/navbar %>

<% include components/sidebar %>
<div class="col-lg-offset-3 col-lg-9 main-content">
  <div class="row title">
    <div class="col-lg-12">
      <h1>Dashboard</h1>
    </div>
  </div>
  <div class="row monitor">
    <div class="col-lg-3">
      <center>
        <h4 class="has-success">Healthy Monitors</h4>
        <h2><strong id="healthyMonitors"><%= healthyMonitors.length %></strong></h2>
      </center>
    </div>
    <div class="col-lg-3">
      <center>
        <h4 class="has-danger">Rocky Monitors</h4>
        <h2><strong id="rockyMonitors"><%= rockyMonitors.length %></strong></h2>
      </center>
    </div>
    <div class="col-lg-3">
      <center>
      <h4 class="has-error">Sick Monitors</h4>
      <h2><strong id="sickMonitors"><%= sickMonitors.length %></strong></h2>
      </center>
    </div>
    <div class="col-lg-3">
      <center>
      <h4>Offline Monitors</h4>
      <h2><strong id="offlineMonitors"><%= offlineMonitors.length %></strong></h2>
      </center>
    </div>
  </div>
  <br />
  <div class="row">
    <div class="col-lg-12">
      <center>
        <a href="/monitors" class="btn btn-default">View Monitors</a>
      </center>
    </div>
  </div>
</div>
<script src="/js/pages/dashboard.js"></script>
