<% include depend.ejs %>

<div class="container">
  <div class="row">
    <div class="col-lg-12 login-header">
      <center>
        <h1><%= dash.name %></h1>
      </center>
    </div>
  </div>
  <center>
    <div class="login-title">
      <div class="row">
        <div class="col-lg-12">
          <h1>Create an Account</h1>
          <h3>If you have the secret key, you can use it here.</h3>
        </div>
      </div>
    </div>
    <div class="login-box">
      <div class="row">
        <div class="col-lg-12">
          <form>
            <label for="email">Email</label>
            <div id="emailGroup" class="input-group">
              <span class="input-group-addon" id="basic-addon1"><i class="fa fa-envelope"></i></span>
              <input id="email" type="email" class="form-control" placeholder="example@example.com" aria-describedby="basic-addon1" />
            </div>
            <span id="emailHelp" class="help-block"></span>
            <label for="firstName">First Name</label>
            <div class="input-group">
              <span class="input-group-addon" id="firstName-addon">F</span>
              <input id="firstName" type="text" class="form-control" placeholder="John" aria-describedby="firstName-addon" />
            </div>
            <label for="lastName">Last Name</label>
            <div class="input-group">
              <span class="input-group-addon" id="lastName-addon">L</span>
              <input id="lastName" type="text" class="form-control" placeholder="John" aria-describedby="lastName-addon" />
            </div>
            <label for="password">Password</label>
            <div id="passwordGroup" class="input-group">
              <span class="input-group-addon" id="password-addon"><i class="fa fa-lock"></i></span>
              <input id="password" type="password" class="form-control" placeholder="*********" aria-describedby="password-addon" />
            </div>
            <label for="confirmPassword">Confirm Password</label>
            <div id="confirmationGroup" class="input-group">
              <span class="input-group-addon" id="confirmPassword-addon"><i class="fa fa-lock"></i></span>
              <input id="confirmPassword" type="password" class="form-control" placeholder="*********" aria-describedby="confirmPassword-addon" />
            </div>
            <span id="helpBox" class="help-block"></span>
            <label for="secretKey">Secret Key</label>
            <div class="input-group">
              <span class="input-group-addon" id="confirmPassword-addon"><i class="fa fa-user-secret"></i></span>
              <input id="secretKey" type="password" class="form-control" placeholder="*********" aria-describedby="confirmPassword-addon" />
            </div>
          </form>
          <br />
          <button id="createAccountButton" class="btn btn-success btn-lg btn-block">Create Account</button>
        </div>
      </div>
    </div>
  </center>
</div>

<script src="/js/pages/signup.js"></script>
